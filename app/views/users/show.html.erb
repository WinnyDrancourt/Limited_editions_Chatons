
<h1><%=@user.first_name%>'s profile</h1>
<p><strong>Name:</strong> <%= @user.first_name %></p>
<p><strong>Email:</strong> <%= @user.email %></p>
<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar %>
<% else %>
  <p> No Avatar avaible</p>
<% end %>

<% if current_user == @user %>
  <%= link_to 'Edit Profile', edit_user_registration_path(@user) %>
  <%= link_to 'Delete My Account', user_path(current_user), method: :delete, data: { confirm: 'Are you sure you want to delete your account?' } %>
  <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: {turbo_method: :delete} %>

<% end %>
