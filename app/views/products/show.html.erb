<div class="d-flex mt-5">
  <div class="m-1">
    <img src=<%= @product.image_url %> class="rounded">
  </div>
  <div class="background-secondary m-1 flex-grow-1 d-flex flex-column rounded">
    <div class="flex-grow-1 d-flex flex-column justify-content-around">
      <div class="">
        <h2 class="category display-1 text-center"><strong><%= @product.name %></strong></h2>
      </div>
      <div class="">
        <p class="card-text text-center"><%= @product.description %></p>
      </div>
    </div>
    <div class="d-flex m-2 justify-content-around">
      <div class="text-center my-auto">
        <p class="card-text"><em>Price :<%= @product.price %>â‚¬</em></p>
      </div>
      <div class="">
        <%= form_tag add_to_cart_path(@product), method: :post do %>
          <%= submit_tag "Add to Cart", class:"button-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
