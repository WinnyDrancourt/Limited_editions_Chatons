<div class="d-flex justify-content-center mt-5">
  <div class="d-flex card card-form mt-5 background-secondary col-md-4 offset-md-3 col-sm-10 offset-sm-1 col-12 align-items-center ms-0">
      <p class="form-title">Edit your account</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch, multipart: true }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- new email field -->
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control text-center", placeholder: "Enter Email" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <!-- End new email field -->
      <!-- Adress field -->
        <p class="text-center mt-2">Personal information</p>
      <div class="d-flex my-2 justify-content-between">
        <div class="field me-2">
          <%= f.text_field :first_name, autofocus: true, class: "form-control text-center", placeholder: "First Name" %>
        </div>
        <div class="field ">
          <%= f.text_field :last_name, autofocus: true, class: "form-control text-center", placeholder: "Last Name"  %>
        </div>
      </div>
      <div class="field my-2">
        <%= f.text_field :adress, autofocus: true, class: "form-control text-center", placeholder: "Address"  %>
      </div>
      <div class="d-flex my-2 justify-content-between">
        <div class="field">
          <%= f.text_field :zip_code, autofocus: true, class: "form-control text-center", placeholder: "Zip Code"  %>
        </div>
        <div class="field">
          <%= f.text_field :town, autofocus: true, class: "form-control text-center", placeholder: "Town"  %>
        </div>
      </div>
      <!-- End Adress field -->

      <!-- New Password -->
        <p class="text-center mt-2">New password <i>(leave blank if you don't want to change it)</i></p>
      <div class="d-flex justify-content-between">
        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control text-center", placeholder: "Password"  %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control text-center", placeholder: "Password Confirmation"  %><br />
        </div>
      </div>
      <!-- End New Password -->

      <!-- Avatar -->
      <div class="field text-center">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class:"form-control" %>
        </div>
      <!-- End Avatar -->

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control text-center", placeholder: "Enter current password"  %>
      </div>

      <div class="d-flex justify-content-around my-2">
          <%= link_to "Back", :back , class: "button-primary text-decoration-none" %>
        <div class="actions">
          <%= f.submit "Update", class: "button-primary"  %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div class="">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "button-primary" %>
  </div>
</div>
